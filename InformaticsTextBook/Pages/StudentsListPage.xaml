<Page x:Class="InformaticsTextBook.Pages.StudentsListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InformaticsTextBook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Список студентов" Loaded="Page_Loaded">

    <DockPanel Background="#FFFDD0">
        <Grid DockPanel.Dock="Top" Height="40" Background="#556B2F">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="Назад" Margin="5" Padding="10,2"
                    VerticalAlignment="Center" Click="BackButton_Click"/>

            <TextBlock Text="Список студентов" Grid.Column="1" VerticalAlignment="Center"
                       HorizontalAlignment="Center" Foreground="#FFFDD0" FontWeight="Bold"/>

            <TextBlock Text="{Binding UserLoginText}" Grid.Column="2"
                       VerticalAlignment="Center" Margin="0,0,10,0"
                       Foreground="#FFFDD0" FontWeight="SemiBold"/>
        </Grid>

        <ListBox x:Name="StudentsListBox" Margin="15" Background="#F5DEB3"
                 ItemsSource="{Binding Students}" MouseDoubleClick="Student_DoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Margin="2" Background="#FFFDD0" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="{Binding UserLogin}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Role.RoleName}" FontStyle="Italic"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Page>
