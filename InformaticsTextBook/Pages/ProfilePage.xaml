<Page x:Class="InformaticsTextBook.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InformaticsTextBook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage" Loaded="Page_Loaded">

    <DockPanel Background="#FFFDD0">

        <!-- Верхняя панель -->
        <Grid DockPanel.Dock="Top" Height="40" Background="#556B2F">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="На главную" Margin="5" Padding="10,2"
                    VerticalAlignment="Center" Click="ToNavigator_Click"/>

            <TextBlock Text="{Binding UserLogin}" Grid.Column="2"
                       VerticalAlignment="Center" Margin="0,0,10,0"
                       Foreground="#FFFDD0" FontWeight="SemiBold"/>
        </Grid>

        <!-- Основное содержимое -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="15">
            <StackPanel>

                <!-- Данные пользователя -->
                <Border BorderBrush="#556B2F" BorderThickness="2"
                        CornerRadius="10" Padding="15" Background="#F5DEB3" Margin="0 0 0 15">
                    <StackPanel>
                        <TextBlock Text="Личный кабинет" FontSize="22" FontWeight="Bold"
                                   Foreground="#556B2F" Margin="0 0 0 10"/>
                        <TextBlock Text="{Binding UserLogin, StringFormat=Логин: {0}}" FontSize="16"/>
                        <TextBlock Text="{Binding RoleName, StringFormat=Роль: {0}}" FontSize="16"/>
                        <TextBlock Text="{Binding TotalLections, StringFormat=Прочитано лекций: {0}}" FontSize="16"/>
                        <TextBlock Text="{Binding TotalTime, StringFormat=Общее время: {0}}" FontSize="16"/>
                    </StackPanel>
                </Border>

                <!-- Лекции -->
                <Border BorderBrush="#556B2F" BorderThickness="2"
                        CornerRadius="10" Padding="15" Background="#F5DEB3" Margin="0 0 0 15">
                    <StackPanel>
                        <TextBlock Text="Прочитанные лекции" FontSize="20" FontWeight="Bold"
                                   Foreground="#556B2F" Margin="0 0 0 10"/>
                        <ItemsControl ItemsSource="{Binding LectionsByTheme}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Expander Header="{Binding ThemeName}" IsExpanded="False" Margin="0 5">
                                        <ItemsControl ItemsSource="{Binding Lections}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="0 2">
                                                        <TextBlock Text="{Binding LectionName}" FontWeight="SemiBold"/>
                                                        <TextBlock Text="{Binding DisplayTime}" Margin="5,0,0,0"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Expander>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Тесты -->
                <Border BorderBrush="#556B2F" BorderThickness="2"
                        CornerRadius="10" Padding="15" Background="#F5DEB3">
                    <StackPanel>
                        <TextBlock Text="Пройденные тесты" FontSize="20" FontWeight="Bold"
                                   Foreground="#556B2F" Margin="0 0 0 10"/>
                        <ListBox x:Name="PassedTestsList" DisplayMemberPath="DisplayText"
                                 Background="#FFFDD0" MouseDoubleClick="PassedTests_DoubleClick"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

    </DockPanel>
</Page>
