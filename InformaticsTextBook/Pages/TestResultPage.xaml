<Page x:Class="InformaticsTextBook.Pages.TestResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InformaticsTextBook.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Результаты теста">

    <DockPanel Background="#FFFDD0">

        <!-- Верхняя панель -->
        <Grid DockPanel.Dock="Top" Height="40" Background="#556B2F">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:Name="ToTestButton" Content="К тесту" Margin="5" 
                    Padding="10,2" VerticalAlignment="Center" Click="ToTestButton_Click"/>

            <TextBlock Text="{Binding UserLoginText}" Grid.Column="2" 
                       VerticalAlignment="Center" Margin="0,0,10,0" 
                       Foreground="#FFFDD0" FontWeight="SemiBold"/>

            <Button x:Name="ToProfileButton" Grid.Column="3" Content="{Binding ToProfileButtonText}" Margin="0,5,10,5" Padding="10,2"
                    VerticalAlignment="Center" Click="ToProfileButton_Click"/>
        </Grid>

        <!-- Заголовок теста -->
        <TextBlock DockPanel.Dock="Top" Text="{Binding TestName}" 
                   Margin="15 5" FontWeight="Bold" FontSize="24" 
                   Foreground="#556B2F"/>

        <Border DockPanel.Dock="Top" Height="5" Background="#556B2F" Margin="5 0" CornerRadius="5"/>

        <!-- Основной блок -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="15">
            <Border BorderBrush="#556B2F" BorderThickness="2" CornerRadius="10" Padding="20" Background="#F5DEB3">
                <StackPanel>
                    <TextBlock Text="Результат прохождения теста" 
                               FontSize="18" FontWeight="Bold" Foreground="#556B2F" 
                               Margin="0 0 0 15"/>

                    <!-- Сетка для аккуратного отображения -->
                    <Grid Margin="0 0 0 15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Правильные ответы:" Grid.Row="0" Grid.Column="0" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding CorrectAnswers}" Grid.Row="0" Grid.Column="1"/>

                        <TextBlock Text="Всего вопросов:" Grid.Row="1" Grid.Column="0" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TotalQuestions}" Grid.Row="1" Grid.Column="1"/>

                        <TextBlock Text="Процент выполнения:" Grid.Row="2" Grid.Column="0" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Percentage, StringFormat={}{0:F2}%}" Grid.Row="2" Grid.Column="1"/>
                    </Grid>

                    <Border Height="2" Background="#556B2F" Margin="0 5"/>

                    <!-- Итоговая оценка -->
                    <TextBlock Text="{Binding Grade, StringFormat='Оценка: {0}'}"
                               FontSize="20" FontWeight="Bold" Foreground="Green"
                               HorizontalAlignment="Center" Margin="0 10"/>
                </StackPanel>
            </Border>
        </ScrollViewer>

    </DockPanel>
</Page>
